# Tala Backend Production Environment Configuration
# Copy this file to .env.production and update with your secure values

# Environment
NODE_ENV=production
SPRING_PROFILES_ACTIVE=prod

# PostgreSQL (Production)
POSTGRES_DB=tala_prod
POSTGRES_USER=tala_prod
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ClickHouse (Production)
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=8123
CLICKHOUSE_DB=tala_analytics
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# Kafka (Production)
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_GROUP_ID=tala-backend-prod

# Redis (Production)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# JWT Authentication (Production)
JWT_SECRET=CHANGE_THIS_TO_VERY_LONG_RANDOM_STRING_AT_LEAST_64_CHARS
JWT_EXPIRATION=86400000

# External APIs (Production)
OPENAI_API_KEY=your-production-openai-api-key
OPENAI_MODEL=gpt-4

# Server Configuration
EVENT_SERVICE_PORT=8081
QUERY_SERVICE_PORT=8082
AI_SERVICE_PORT=8083
USER_SERVICE_PORT=8084
GATEWAY_SERVICE_PORT=8080

# Monitoring (Production)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
GRAFANA_URL=https://grafana.yourdomain.com

# Logging (Production)
LOG_LEVEL=WARN
LOG_PATH=/var/log/tala

# Resource Limits (Production - Mac Mini)
MAX_MEMORY_PER_SERVICE=1G
MAX_CPU_PER_SERVICE=2.0

# SSL/TLS
SSL_ENABLED=true
SSL_CERTIFICATE_PATH=/etc/ssl/certs/tala.crt
SSL_KEY_PATH=/etc/ssl/private/tala.key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups

# GitHub Actions Secrets (Set these in GitHub)
# SERVER_HOST=your-mac-mini-ip-or-domain
# SERVER_USER=your-server-username
# SSH_PRIVATE_KEY=your-ssh-private-key
# SLACK_WEBHOOK=your-slack-webhook-url
